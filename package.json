{
  "name": "comment-api",
  "version": "0.1.0",
  "description": "The Comment REST API. Azure Functions webpack service for the Serverless framework using Typescript",
  "scripts": {
    "start": "serverless offline",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.js",
    "lint:ci": "npm run lint --max-warnings=0",
    "lint:fix": "npm run lint --quiet --fix",
    "test": "cross-env FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 FIRESTORE_EMULATOR_HOST=localhost:8080 GCLOUD_PROJECT=phupha-digital jest --config ./jest.config.js --rootDir .",
    "test:watch": "npm run test --watch",
    "test:ci": "firebase emulators:exec npm run test --coverage"
  },
  "hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint:fix"
  },
  "keywords": [
    "azure",
    "serverless",
    "comment",
    "rest",
    "api"
  ],
  "dependencies": {
    "firebase-admin": "^10.0.0",
    "joi": "^17.5.0"
  },
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@types/jest": "^27.0.3",
    "@types/joi": "^17.2.3",
    "@types/node": "^13.13.52",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "copy-webpack-plugin": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase": "^9.6.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "serverless-azure-functions": "^2.1.3",
    "serverless-webpack": "^5.6.0",
    "ts-jest": "^27.1.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "webpack-node-externals": "^3.0.0"
  }
}